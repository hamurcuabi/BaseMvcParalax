                        <p class="text-color-light opacity-7">@Resources.Content.servicescontent</p>
                    </div>
                </div>
                <div class="row">
                    @{
                        int anim = 1;
                        string animtext = "";


                        foreach (var item in Model.Services)
                        {
                            if (anim % 3 == 0) { animtext = "fadeInRightShorter"; }
                            else if (anim % 3 == 1) { animtext = "fadeInUpShorter"; }
                            else if (anim % 3 == 2) { animtext = "fadeInLeftShorter"; }

                            <div class="col-lg-4 appear-animation" data-appear-animation="@animtext" data-appear-animation-delay="300">
                                <div class="feature-box feature-box-style-2">
                                    <div class="feature-box-icon">
                                        <i class="icons @item.Icon text-color-light"></i>
                                    </div>
                                    <div class="feature-box-info">
                                        <h4 class="font-weight-bold text-color-light text-4 mb-2">@item.Header</h4>
                                        <p class="text-color-light opacity-7">@item.Description</p>
                                    </div>
                                </div>
                            </div>

                            anim++;

                        }


                    }


                </div>
            </div>
